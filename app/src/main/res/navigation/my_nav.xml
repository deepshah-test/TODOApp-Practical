<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_nav"
    app:startDestination="@id/listFragment">

    <fragment
        android:id="@+id/listFragment"
        android:name="com.develop.deep.todoapp_practical.fragments.list.ListFragment"
        android:label="Home"
        tools:layout="@layout/fragment_list" >
        <action
            android:id="@+id/action_listFragment_to_addTaskFragment"
            app:destination="@id/addTaskFragment" />
        <action
            android:id="@+id/action_listFragment_to_updateTaskFragment"
            app:destination="@id/updateTaskFragment" />
    </fragment>
    <fragment
        android:id="@+id/addTaskFragment"
        android:name="com.develop.deep.todoapp_practical.fragments.add.AddTaskFragment"
        android:label="Add Task"
        tools:layout="@layout/fragment_add_task" >
        <action
            android:id="@+id/action_addTaskFragment_to_listFragment"
            app:destination="@id/listFragment"
            app:popUpToInclusive="false" />
    </fragment>
    <fragment
        android:id="@+id/updateTaskFragment"
        android:name="com.develop.deep.todoapp_practical.fragments.update.UpdateTaskFragment"
        android:label="Edit Task"
        tools:layout="@layout/fragment_update_task" >
        <action
            android:id="@+id/action_updateTaskFragment_to_listFragment"
            app:destination="@id/listFragment"
            app:popUpToInclusive="false" />
        <argument
            android:name="currentItem"
            app:argType="com.develop.deep.todoapp_practical.models.Task" />
    </fragment>
</navigation>